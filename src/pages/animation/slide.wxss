.profile {
    font-size: 26rpx;
  }
  
  .profile .pass {
    height: 100vh;
    width: 750rpx;
    position: relative;
  }
  
  .profile .pass .bg {
    background: linear-gradient(#e0e0e0, #a4a4a4 66%, #757575);
    height: 1624rpx;
    width: 100%;
  }
  
  .profile .pass .card-container {
    position: absolute;
    left: 50%;
    margin-left: -685rpx / 2;
  }
  
  .profile .pass .card-container .card {
    height: 1070rpx;
    width: 685rpx;
  }
  
  .profile .pass .code-container {
    position: absolute;
    top: 500rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 300rpx;
    height: 300rpx;
    overflow: hidden;
    border-radius: 10rpx;
    opacity: 1;
    transition: opacity 0.3s linear;
  }
  
  .profile .pass .code {
    position: relative;
    width: 336rpx;
    height: 336rpx;
    top: -36rpx / 2;
    left: -36rpx / 2;
  }
  
  .profile .pass .desc-container {
    position: absolute;
    top: 820rpx;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    text-align: center;
  }
  
  .profile .pass .desc-container text {
    font-size: 22rpx;
    line-height: 24rpx;
    letter-spacing: 4rpx;
    font-weight: 400;
  }
  
  .profile .pass .code-loading {
    padding: 118rpx;
    width: 64rpx;
    height: 64rpx;
  }
  
  .profile .pass .code-overlay {
    background-color: rgba(74, 56, 17, 0.5);
    z-index: 2;
  }
  
  .profile .profile-user {
    height: 100vh;
    width: 100%;
    position: fixed;
    top: 368rpx;
    left: 0;
    box-sizing: border-box;
    z-index: 99;
    transition: top 0.25s cubic-bezier(0.606, 0, 0.39, 1);
    padding: 0 40rpx;
    background-color: #fff;
  }
  
  .profile .profile-user__info {
    text-align: center;
    position: relative;
  }
  
  .profile .profile-user__info:after {
    content: '';
    position: absolute;
    top: 0;
    height: 100%;
    left: 0;
    width: 620.61rpx;
    left: 50%;
    margin-left: -310.305rpx;
    z-index: 0;
  }
  
  .profile .profile-user_hidden {
    top: 1064rpx;
  }
  
  .profile .profile-user_hidden .profile-user__info:after {
    opacity: 0;
  }
  
  .profile .profile-user__details {
    display: inline-block;
    position: relative;
    line-height: 100%;
    z-index: 1;
  }
  
  .profile .profile-user__name {
    font-family: 'Nike TG', 'PingFang SC', 'Droid Sans Fallback';
    font-size: 48rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-top: 100rpx;
    display: inline-block;
    width: 600rpx;
    overflow: hidden;
    line-height: 48rpx;
    margin-bottom: 8rpx;
    letter-spacing: 0rpx;
    font-weight: 700;
  }
  
  .profile .profile-user__meta {
    color: #ccc;
    padding-top: 8rpx;
    display: inline-block;
    font-size: 26rpx;
    font-family: 'Helvetica Neue';
  }
  
  .profile .profile-user__meta text {
    font-family: 'Nike TG', 'PingFang SC', 'Droid Sans Fallback';
  }
  
  .profile .profile-user__avatar-container {
    height: 120rpx;
    width: 120rpx;
    border-radius: 100%;
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }
  
  .profile .profile-user__avatar {
    width: 112rpx;
    height: 112rpx;
    border-radius: 100%;
  }
  
  .profile .profile-user__nav {
    margin-top: 40rpx;
    display: flex;
    justify-content: space-around;
  }
  
  .profile .profile-user__link {
    padding: 78rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 1;
    flex-direction: column;
  }
  
  .profile .profile-user__link:nth-child(1) {
    border-bottom: 0;
  }
  
  .profile .profile-user__link view {
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  
  .profile .profile-user__link view span {
    font-weight: normal;
    font-size: 26rpx;
  }
  
  .profile .profile-user__icon {
    margin-bottom: 18rpx;
    width: 44rpx;
    height: 44rpx;
  }
  
  .profile .profile-user__hover {
    background-color: transparent;
  }
  