.preference-item {
    width: 150px;
    text-align: center;
    margin: 40px auto 20px;
    position: relative;
  }
  
  .preference-item:nth-child(even) {
    align-items: flex-end;
  }
  
  .preference-item-container {
    width: 150px;
    height: 150px;
    position: relative;
  }
  
  .image-preference {
    width: 150px;
    height: 150px;
    transition: background-size 0.3s ease-in-out;
    position: relative;
    overflow: hidden;
  }
  
  .image-preference image {
    width: 100%;
    height: 100%;
    transition: all 0.3s ease-in-out;
  }
  
  .image-preference.active image {
    transform: scale(1.1);
  }
  
  .preference-overlay {
    z-index: 3;
    width: 0;
    height: 0;
    position: absolute;
    left: 50%;
    top: 50%;
    background-color: #000;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: all 0.3s ease-in-out, 0.3s border-radius ease-in;
    border-radius: 50%;
    margin-right: -1px;
  }
  
  .preference-overlay.active {
    opacity: 0.7;
    width: 150%;
    height: 150%;
  }
  
  .checkmark {
    width: 20px;
    height: 20px;
    z-index: 4;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: all 0.3s ease-in-out;
  }
  
  .checkmark.active {
    opacity: 1;
    height: 40px;
    width: 40px;
  }
  